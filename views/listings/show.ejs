<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/show.css" />

<div class="container mt-3">
  <!-- Listing Info -->
  <div class="row">
    <div class="col-5 offset-2">
      <div class="card listing-card show mt-3 p-3">
        <h3>
          <a
            href="/listings"
            class="text-dark me-2"
            style="text-decoration: none"
          >
            <i class="fa-solid fa-arrow-left" style="font-size: 1.4rem"></i>
          </a>
          &nbsp; <%= listing.title %>
        </h3>

        <br />
        <div class="container-fluid">
          <div class="row g-2">
            <% if (listing.images.length === 1) { %>
            <div class="col-12">
              <img
                src="<%= listing.images[0].url %>"
                alt="Main image"
                class="img-fluid main-image"
                style="height: 18rem; object-fit: cover"
              />
            </div>
            <% } else { %>
            <!-- Left large image -->
            <div class="col-12 col-md-6">
              <img
                src="<%= listing.images[0].url %>"
                class="img-fluid main-image"
                style="
                  height: 100%;
                  width: 100%;
                  object-fit: cover;
                  border-radius: 1rem;
                "
              />
            </div>
            <!-- Right 4 smaller images -->
            <div class="col-12 col-md-6">
              <div class="row g-2">
                <% for(let i = 1; i < Math.min(listing.images.length, 5); i++) {
                %>
                <div class="col-6">
                  <img
                    src="<%= listing.images[i].url %>"
                    class="img-fluid small-image"
                    style="
                      height: 8.8rem;
                      width: 100%;
                      object-fit: cover;
                      border-radius: 0.5rem;
                    "
                  />
                </div>
                <% } %>
              </div>
            </div>
            <!-- Show all photos button -->
            <div class="text-end mt-2">
              <button
                class="btn btn-light border rounded-pill px-3 py-1"
                data-bs-toggle="modal"
                data-bs-target="#photoModal"
                style="font-size: 1rem"
              >
                <i class="bi bi-images"></i> Show all photos
              </button>
            </div>
            <% } %>
          </div>
        </div>

        <!-- Modal -->
        <div
          class="modal fade"
          id="photoModal"
          tabindex="-1"
          aria-labelledby="photoModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-fullscreen">
            <div class="modal-content bg-dark text-white">
              <div class="modal-header border-0">
                <h5 class="modal-title" id="photoModalLabel">Photos</h5>
                <button
                  type="button"
                  class="btn-close btn-close-white"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div class="container-fluid">
                  <div class="row g-3">
                    <% listing.images.forEach(img=> { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                      <img
                        src="<%= img.url %>"
                        alt="listing photo"
                        class="img-fluid rounded modal-image"
                        style="height: 15rem; width: 100%; object-fit: cover"
                      />
                    </div>
                    <% }) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        &nbsp;&nbsp;
        <div class="card-body">
          <p class="card-text">
            Owned by - <b> <%= listing.owner.username %> </b>
          </p>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">
            &#8377;<span class="price"
              ><b> <%= listing.price.toLocaleString("en-IN") %> </b></span
            >&nbsp; for 1 night (excl. GST)
          </p>
          <p class="card-text">
            <i class="bi bi-geo-alt-fill location-icon"></i>
            <%= listing.location %> , <%= listing.country %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-5 offset-2 d-flex gap-3">
      &nbsp; <% if(currentUser && currentUser._id.equals(listing.owner._id)){ %>
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn"
        >Edit</a
      >
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark">Delete</button>
      </form>
      <% } %> <% if(!currentUser ||!currentUser._id.equals(listing.owner._id)) {
      %>
      <a href="/bookings/<%=listing._id%>/book" class="btn btn-dark add-btn"
        >Book</a
      >
      <button
        class="wishlist-btn-show"
        data-listing-id="<%= listing._id %>"
        style="
          background: none;
          border: none;
          cursor: pointer;
          font-size: 1.2rem;
        "
      >
        <i class="fa-regular fa-heart heart-icon"></i>
      </button>
      <% } %>
    </div>
  </div>

  <% if(currentUser){ %>
  <!-- Review Form -->
  <hr />
  <div class="mb-3">
    <div class="col-5 offset-2">
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%= listing.id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            rows="4"
            cols="100"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comment for review.
          </div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  </div>
  <% } %>
  <!-- All Reviews -->
  <% if(listing.reviews.length> 0){ %>
  <hr />
  <div class="mb-3">
    <div class="col-5 offset-2">
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for (review of listing.reviews) { %>
        <div class="card col-10 col-sm-6 col-md-6 mb-3">
          <div class="card-body comment-box">
            <h6 class="card-title">@<%= review.author.username %></h6>
            <p
              class="starability-result card-text"
              data-rating="<%= review.rating %>"
            ></p>
            <p class="card-text"><%= review.comment %></p>

            <% if(currentUser){ %>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              method="POST"
            >
              <button class="trash"><i class="fa-solid fa-trash"></i></button>
            </form>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>
    <hr />

    <!-- Map -->
    <div class="mb-4">
      <div class="col-5 offset-2">
        <h4>Where you'll be</h4>
        <br />
        <div id="map" class="ms-2"></div>
      </div>
    </div>
  </div>
</div>

<script>
  const mapToken = "<%= mapToken %>";
  const listing = <%- JSON.stringify(listing) %>;
  console.log("Listing geometry:", <%- JSON.stringify(listing.geometry) %>);
</script>
<script src="/js/map.js"></script>
<script src="/js/show.js"></script>
