<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <div class="alert alert-danger text-center shadow-sm" role="alert">
        <div class="mb-3">
          <% if(message.includes('timeout') || message.includes('connection') ||
          message.includes('Database')) { %>
          <i class="fa-solid fa-wifi-slash" style="font-size: 1rem"></i>
          <% } else if(message.includes('not found') || message.includes('404'))
          { %>
          <i class="fa-solid fa-magnifying-glass" style="font-size: 1rem"></i>
          <% } else { %>
          <i
            class="fa-solid fa-triangle-exclamation"
            style="font-size: 1rem"
          ></i>
          <% } %>
        </div>

        <h4 class="mb-3"><%= message %></h4>

        <% if(message.includes('timeout') || message.includes('connection') ||
        message.includes('Database')) { %>
        <div class="mt-3 text-start">
          <p class="mb-2"><strong>Possible causes:</strong></p>
          <ul class="small">
            <li>Your internet connection is unstable</li>
            <li>Database server might be temporarily unavailable</li>
            <li>Network firewall blocking the connection</li>
          </ul>
        </div>
        <% } %>

        <div class="mt-4 d-flex gap-2 justify-content-center flex-wrap">
          <a href="/listings" class="btn btn-primary">
            <i class="fa-solid fa-home me-2"></i>Go to Home
          </a>
          <button onclick="window.history.back()" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left me-2"></i>Go Back
          </button>
          <button onclick="location.reload()" class="btn btn-outline-secondary">
            <i class="fa-solid fa-rotate-right me-2"></i>Try Again
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
