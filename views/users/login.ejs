<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h3 class="col-6 offset-3">
    <a href="/listings" class="text-dark me-3" style="text-decoration: none">
      <i class="bi bi-arrow-left" style="font-size: 2rem"></i>
    </a>
    &nbsp;&nbsp;Login
  </h3>
  <div class="col-6 offset-3">
    <br />

    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username: </label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password: </label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <button class="btn btn-success mt-2">Log in</button>
        <p class="offset-6">Or,</p>
        <a class="btn btn-success google" href="/login/federated/google"
          >Sign in with Google</a
        >
        <p>Not an user? <a href="/signup">sign up</a></p>
      </div>
    </form>
  </div>
</div>
