<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h3 class="col-6 offset-3">
    <a href="/listings" class="text-dark me-3" style="text-decoration: none">
      <i class="bi bi-arrow-left" style="font-size: 2rem"></i> </a
    >&nbsp;&nbsp;SignUp on Wanderlust
  </h3>
  <br /><br /><br />
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username: </label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email: </label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password: </label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Strong password</div>
      </div>
      <button class="btn btn-success">Sign Up</button>
      <p>Already an user? <a href="/login">Log in</a></p>
    </form>
  </div>
</div>
