<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12 col-lg-10 offset-lg-1">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <a
            href="/dashboard"
            class="text-dark me-2 me-md-3"
            style="text-decoration: none"
          >
            <i class="fa-solid fa-arrow-left fs-5 fs-md-4"></i>
          </a>
          <span class="fs-5 fs-md-4 fw-semibold">My Listings</span>
        </div>
      </div>

      <!-- Empty State -->
      <% if(userListings.length === 0) { %>
      <div class="card shadow-sm text-center">
        <div class="card-body py-5">
          <i class="fa-solid fa-house-circle-xmark fs-1 text-muted mb-3"></i>
          <h5 class="mb-2">No listings yet!</h5>
          <p class="text-muted mb-3 small">
            Start by creating your first listing.
          </p>
          <a href="/listings/new" class="btn btn-dark">
            <i class="fa-solid fa-plus me-2"></i>Create Listing
          </a>
        </div>
      </div>
      <% } else { %>

      <!-- Listings Grid -->
      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3 g-md-4">
        <% userListings.forEach(listing => { %>
        <div class="col">
          <div class="card listing-card h-100 shadow-sm">
            <a href="/listings/<%= listing._id %>" class="text-decoration-none">
              <img
                src="<%= listing.images[0].url %>"
                class="card-img-top"
                alt="<%= listing.title %>"
                style="height: 180px; object-fit: cover"
              />
            </a>
            <div class="card-body p-3">
              <a
                href="/listings/<%= listing._id %>"
                class="text-decoration-none text-dark"
              >
                <h6
                  class="card-title mb-2 fw-semibold"
                  style="font-size: 0.95rem"
                >
                  <%= listing.title %>
                </h6>
              </a>
              <p class="card-text text-muted mb-2 small">
                <i class="fa-solid fa-location-dot"></i>
                <%= listing.location %>
              </p>
              <p class="card-text mb-2">
                <strong class="fs-6"
                  >â‚¹<%= listing.price.toLocaleString("en-IN") %></strong
                >
                <span class="small text-muted">/ night</span>
              </p>
              <% if(listing.avgRating > 0) { %>
              <p class="card-text mb-0 small">
                <i class="fa-solid fa-star text-warning"></i>
                <strong><%= listing.avgRating %></strong>
                <span class="text-muted">(<%= listing.reviews.length %>)</span>
              </p>
              <% } %>
            </div>
            <div class="card-footer bg-white border-top p-2">
              <div class="d-flex gap-2">
                <a
                  href="/listings/<%= listing._id %>/edit"
                  class="btn btn-sm btn-outline-primary flex-fill py-1"
                  style="font-size: 0.85rem"
                >
                  <i class="fa-solid fa-edit"></i>
                  <span class="d-none d-md-inline ms-1">Edit</span>
                </a>
                <form
                  action="/listings/<%= listing._id %>?_method=DELETE"
                  method="POST"
                  class="flex-fill"
                  onsubmit="return confirm('Are you sure you want to delete this listing?');"
                >
                  <button
                    class="btn btn-sm btn-outline-danger w-100 py-1"
                    style="font-size: 0.85rem"
                  >
                    <i class="fa-solid fa-trash"></i>
                    <span class="d-none d-md-inline ms-1">Delete</span>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <% } %>
    </div>
  </div>
</div>
